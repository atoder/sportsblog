extends layout

block content
 .spacer
 .container
  .row
   .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
    h1= title
    ul.errors
     if errors
      each error, i in errors
       li.alert.alert-danger #{error.msg}
    form(method='post', action='/categories/add')
     .form-group
      label Title:
      input.form-control(name='title', type='text')
     .form-group
      label Description
      textarea.form-control(name='description', id='body')
       if description
        =description
     input.btn.btn-primary(name='submit',type='submit',value='Save')
     a(class='btn btn-default' href='/manage/categories') Back
